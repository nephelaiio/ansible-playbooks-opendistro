---
_meta:
  type: "internalusers"
  config_version: 2

{{ elasticsearch_config_admin_user }}:
  hash: "{{ elasticsearch_config_admin_pass | password_hash('bcrypt') }}"
  reserved: true
  backend_roles:
    - "admin"
    - "kibana_user"
    - "security_rest_api_access"
  description: "Admin user"

{{ elasticsearch_config_kibana_user }}:
  hash: "{{ elasticsearch_config_kibana_pass | password_hash('bcrypt') }}"
  reserved: true
  backend_roles:
    - "kibana_server"
  description: "Kibana user"

{{ elasticsearch_config_logstash_user }}:
  hash: "{{ elasticsearch_config_logstash_pass | password_hash('bcrypt') }}"
  reserved: false
  backend_roles:
    - "logstash" 
  description: "Logstash user"

{{ elasticsearch_config_metricbeat_user }}:
  hash: "{{ elasticsearch_config_metricbeat_pass | password_hash('bcrypt') }}"
  reserved: false
  backend_roles:
    - "logstash" 
  description: "Logstash user"
